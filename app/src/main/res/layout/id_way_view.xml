<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp">

    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/phone_id"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/greenPrimaryDark"
        android:text="@string/phonePick"
        android:textColor="@color/white" />

    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/camera_id"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/greenPrimaryDark"
        android:text="@string/shootPhoto"
        android:textColor="@color/white" />

    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/signature_id"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greenPrimaryDark"
        android:text="@string/drawSignature"
        android:textColor="@color/white" />

</LinearLayout>